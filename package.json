{
  "name": "kdn-sdk",
  "version": "1.0.0",
  "description": "A TypeScript SDK for integrating human-readable addresses with KadenaNames on the Kadena blockchain.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "build:sdk": "tsc -p tsconfig.sdk.json && tsc -p tsconfig.sdk.cjs.json && npm run build:sdk:browser",
    "build:sdk:browser": "rollup -c rollup.config.cjs",
    "build:example": "tsc -b tsconfig.example.json && vite build",
    "build": "npm run build:sdk",
    "start": "ts-node src/sdk/index.ts",
    "dev": "vite",
    "test:sdk": "vitest run --config vitest.sdk.config.ts",
    "test": "npm run test:sdk",
    "prepare": "npm run build",
    "preview": "vite preview"
  },
  "bugs": {
    "url": "https://github.com/kdlabs-org/kdn-sdk/issues"
  },
  "homepage": "https://github.com/kdlabs-org/kdn-sdk#readme",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/kdlabs/kdn-sdk.git"
  },
  "keywords": [
    "kadena",
    "sdk",
    "typescript",
    "blockchain",
    "decentralized",
    "nameservice"
  ],
  "author": "Danillo <info@kdlaunch.com>",
  "license": "MIT",
  "dependencies": {
    "@kadena/client": "^1.15.0",
    "@kadena/types": "^0.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "vm-browserify": "^1.1.2"
  },
  "devDependencies": {
    "msw": "2.2.14",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^2.1.6",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.0.1",
    "crypto-browserify": "^3.12.0",
    "eslint": "^9.15.0",
    "eslint-plugin-vitest": "^0.5.4",
    "process": "^0.11.10",
    "rollup": "^3.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "stream-browserify": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "util": "^0.12.4",
    "vite": "^4.0.0",
    "vitest": "^2.1.6"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE",
    "!src/**/*.test.ts",
    "!src/example-app",
    "!src/example-code"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "vitest"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:vitest/recommended"
    ],
    "rules": {
      "semi": [
        2,
        "always"
      ],
      "quotes": [
        2,
        "single"
      ],
      "@typescript-eslint/no-unused-vars": 2
    }
  }
}